<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    android:paddingTop="20dp"
    android:paddingLeft="80dp"
    android:paddingRight="80dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amber.project.Connection"
    tools:showIn="@layout/activity_connection">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/sync"
        android:id="@+id/imageView_sync"
        android:paddingBottom="20dp"
        android:contentDescription="@string/sync"
        android:layout_alignBottom="@+id/textView_child_id"
        android:layout_marginBottom="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button.ok"
        android:layout_alignEnd="@+id/button.ok" />

    <TextView
        android:id="@+id/textView_child_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="100dp"
        android:text="Enter Child ID" />

    <EditText
        android:id="@+id/editText_cid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="number"
        android:layout_toStartOf="@+id/imageView_sync"
        android:layout_alignRight="@+id/imageView_sync"
        android:layout_alignEnd="@+id/imageView_sync"
        android:layout_below="@+id/textView_child_id" />


    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button.ok"
        android:layout_below="@+id/editText_cid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />




</RelativeLayout>
